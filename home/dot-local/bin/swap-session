#!/usr/bin/env bash

# wholeheartedly pinched from https://github.com/ThePrimeagen/.dotfiles/
if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected=$(find ~/code ~/develop ~/personal -mindepth 1 -maxdepth 1 -type d | fzf --tmux)
fi

if [[ -z $selected ]]; then
  exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

join_session() {
  if [[ -z $TMUX ]]; then
    tmux attach -t=$selected_name
  else
    tmux switch-client -t=$selected_name
  fi
}

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -ds $selected_name -c $selected
  tmux send-keys -t $selected_name 'session-launch' C-m
elif ! tmux has-session -t=$selected_name 2>/dev/null; then
  tmux new-session -ds $selected_name -c $selected
  tmux send-keys -t $selected_name 'session-launch' C-m
fi

join_session
